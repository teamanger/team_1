<div class="account-container register stacked">
	
	<div class="content clearfix">
		
		<form action="/register" method="post">
		
			<h1>Crear una cuenta</h1>			
			

			<div class="login-fields">
				
				
				<div class="field">
					<label for="firstname">Nombre:</label>
					<input type="text" id="firstname" name="nombre" value="" placeholder="Nombre" class="form-control" />
				</div> <!-- /field -->
				
				<div class="field">
					<label for="lastname">Apodo:</label>	
					<input type="text" id="lastname" name="apodo" value="" placeholder="Apodo" class="form-control" />
				</div> <!-- /field -->
				
				
				<div class="field">
					<label for="email">Email:</label>
					<input type="text" id="email" name="email" value="" placeholder="Email" class="form-control"/>
				</div> <!-- /field -->
				
				<div class="field">
					<label for="password">Contrase単a:</label>
					<input type="password" id="password" name="password" value="" placeholder="Contrase単a" class="form-control"/>
				</div> <!-- /field -->
				
				<div class="field">
					<label for="confirm_password">Confirmar contrase単a:</label>
					<input type="password" id="confirm_password" name="confirm_password" value="" placeholder="Confirmar contrase単a" class="form-control"/>
				</div> <!-- /field -->

				<div class="field">
					<label for="confirm_password">Tipo de usuario</label>

				<select id="validateSelect" name="tipo_usuario_id" class="form-control">
				     <option value="1">Jugador</option>
				     <option value="2">Administrador de eventos</option>   
				</select>


				</div> <!-- /field -->

				
			</div> <!-- /login-fields -->
			
			<div class="login-actions">
									
				<button class="login-action btn btn-primary">Registrarse</button>
				
			</div> <!-- .actions -->
			
		</form>
		
	</div> <!-- /content -->
	
</div> <!-- /account-container -->


<!-- Text Under Box -->
<div class="login-extra">
	Ya tenes cuenta? <a href="/login">Ingresar</a>
</div> <!-- /login-extra -->




<script src="/js/libs/jquery.js"></script>
